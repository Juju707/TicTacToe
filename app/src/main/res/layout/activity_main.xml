<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/welcome"
            android:layout_width="202dp"
            android:layout_height="52dp"
            android:id="@+id/txt_welcome" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center" android:textSize="36sp"
            android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:fontFamily="@font/alegreya_sc" android:textColor="#C2185B"/>
    <Button
            android:text="@string/single_player"
            android:layout_width="201dp"
            android:layout_height="46dp"
            style="@style/ShapeAppearance.MyApp.SmallComponent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_single" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_multi" app:layout_constraintHorizontal_bias="0.495"
            android:textColor="#FFFFFF" android:background="#F06292" android:fontFamily="@font/alegreya_sc"/>
    <Button
            android:text="@string/multiplayer"
            android:layout_width="198dp"
            android:layout_height="49dp"
            style="@style/ShapeAppearance.MyApp.SmallComponent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btn_multi"
            app:layout_constraintHorizontal_bias="0.488" android:layout_marginBottom="180dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textColor="#FFFFFF" android:background="#F06292"
            android:fontFamily="@font/alegreya_sc"/>

</androidx.constraintlayout.widget.ConstraintLayout>
